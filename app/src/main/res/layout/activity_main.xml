<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:padding="20dp"
    android:background="#594736"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="74dp"
        android:layout_height="82dp"
        android:src="@drawable/baseline_android_24"/>


    <TextView
        android:layout_width="277dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/logo"
        android:gravity="center"
        android:text="Welcome to Voice Assistant"
        android:textColor="#F11F5A"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35sp"
        android:text="Press to start speaking..."
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTxt"
        android:layout_marginTop="10dp"
        android:hint="1.Speak ''open dial'' to open dial pad "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dial"
        android:layout_marginTop="5dp"
        android:hint="2.Speak ''open Google'' to open google"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/google"
        android:layout_marginTop="5dp"
        android:hint="3.Speak ''what is the weather'' to weather Forecast"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather"
        android:layout_marginTop="5dp"
        android:hint="4.Speak ''open Instagram''"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/develop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whatsapp"
        android:layout_marginTop="5dp"
        android:hint="5.Speak ''who developed you''"
        android:textSize="20sp"/>


    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="130dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="561dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="26dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_mic_24" />

</RelativeLayout>